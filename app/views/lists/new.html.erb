<%= form_with :model => @list do |list_form| %>
  <%= list_form.text_field :name, :placeholder => 'Name the list' %>
  <%= tag.br %>
  <%= list_form.text_area :description, :placeholder => 'Describe the list (optional)' %>
  <%= tag.br %>
  <%= list_form.radio_button :privacy, :draft %>
  <%= list_form.label :privacy, :draft %>
  <%= list_form.radio_button :privacy, :unreviewed %>
  <%= list_form.label :privacy_unreviewed, 'Public' %>
  <%= list_form.radio_button :privacy, :unreviewed_secret %>
  <%= list_form.label :privacy_unreviewed_secret, 'Just for my muggles' %>
  <%= tag.br %>
  <%= list_form.radio_button :mode, :ordered %>
  <%= list_form.label :mode, :ordered %>
  <%= list_form.radio_button :mode, :randomized %>
  <%= list_form.label :mode, :randomized %>
  <%= tag.br %>
  <%= list_form.submit %>
<% end %>
