<%= form_with :model => @list do |list_form| %>
  <%= list_form.text_field :name, :placeholder => 'Name the list' %>
  <%= tag.br %>
  <%= list_form.text_area :description, :placeholder => 'Describe the list (optional)' %>
  <%= tag.br %>
  <%= list_form.radio_button :mode, :ordered %>
  <%= list_form.label :mode, :ordered %>
  <%= tag.br %>
  <%= list_form.radio_button :mode, :randomized %>
  <%= list_form.label :mode, :randomized %>
  <%= tag.br %>
  <%= list_form.submit %>
<% end %>
