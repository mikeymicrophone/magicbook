<%= div_for @list do %>
  <%= div_for @list, :name_of do %>
    <%= @list.name %>
    <%= link_to 'edit', edit_list_path(@list), :class => 'edit_list_link' if current_magician == @list.magician %>
  <% end %>
  
  <%= div_for @list, :description_of do %>
    <%= mark_up @list.description %>
  <% end if @list.description? %>

  <%= div_for @list, :listed_items_in do %>
    <% @listed_items.each do |listed_item| %>
      <%= listed_item_display listed_item %>
    <% end %>
  <% end %>

  <%= div_for @list, :new_item_adder_for %>

  <%= link_to 'Add an item', new_list_listed_item_path(@list), :remote => true if current_magician == @list.magician %>
<% end %>
<%= open_graph_tags @list %>
<%= facebook_quote_plugin %>
