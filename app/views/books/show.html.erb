<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Version:</strong>
  <%= @book.version %>
</p>

<p>
  <strong>Pdf:</strong>
  <%= @book.pdf %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>

<% @book.editions.each do |edition| %>
  <%= div_with_data_for edition do %>
    <% edition.chapters.each do |chapter| %>
      <%= div_with_data_for chapter do %>
        <%= chapter.title %>
        <%= chapter.subtitle %>
        <% chapter.sections.each do |section| %>
          <%= div_with_data_for section do %>
            <%= section.heading %>
            <%= section.subheading %>
            <% section.paragraphs.each do |paragraph| %>
              <%= div_with_data_for paragraph do %>
                <%= paragraph.text %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
