<% @book.editions.each do |edition| %>
  <%= div_for edition do %>
    <%= focus_append_on edition %>
    <% edition.chapters.each do |chapter| %>
      <%= div_for chapter do %>
        <%= focus_append_on chapter %>
        <%= chapter.title %>
        <% chapter.sections.each do |section| %>
          <%= focus_append_on section %>
          <%= div_for section do %>
            <%= section.heading %>
            <%= section.subheading %>
            <% section.paragraphs.each do |paragraph| %>
              <%= div_for paragraph do %>
                <%= paragraph.text %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= form_with :model => Paragraph.new do |paragraph_form| %>
  <%= paragraph_form.text_area :text %>
  <%= paragraph_form.submit :append %>
  <%= paragraph_form.hidden_field :book_id, :value => @book.id %>
<% end %>