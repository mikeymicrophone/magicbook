<% @books.each do |book| %>
  <%= div_for book, :bookshelf_display_of do %>
    <%= div_for book, :chapter_count_of do %>
      <%= pluralize book.current_edition.chapters.count, 'chapter' %>
    <% end if book.current_edition %>
    <%= div_for book, :title_of do %>
      <%= book_title_link book %>
    <% end %>
    
    by <%= book.author %>
    
    <%= div_for book, :actions_with do %>
      <%= begin_reading_link book %>
      <%= add_muggles_link book %>
    <% end %>
  <% end %>
<% end %>
